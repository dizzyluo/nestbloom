{% set site_title = 'Ritual' %}

{% block page %}

    <section class="ritual" data-ritual="container">

        {# Section Unwrapping #}

        <section class="ritual-stage ritual-stage--one" data-ritual="section" data-id="0">

            <div class="ritual-stage__content" data-stage="content">
                <h2 class="ritual-stage__title" data-stage="title">
                    <span class="ritual-stage__instruction">Take the Time</span>
                </h2>
                <p class="ritual-stage__subtitle">Your 5 minute journey of pampering and rejuvenation begins here.</p>
            </div>
            <a href="/index.php/shop" class="btn btn--buy ritual-stage__btn">
                Buy Now
                <div class="btn__accent">
                    <svg class="mini-cart-decoration" x="0px" y="0px" viewBox="0 0 17 17" enable-background="new 0 0 17 17" xml:space="preserve">

                        <g>
                            <path class="mini-cart-decoration__circle mini-cart-decoration__circle--one" fill-rule="evenodd" clip-rule="evenodd" fill="none" stroke="#D59A7C" stroke-miterlimit="10" d="M8.5,6.5c2.8,0,5,2.2,5,5s-2.2,5-5,5s-5-2.2-5-5S5.7,6.5,8.5,6.5z"></path>
